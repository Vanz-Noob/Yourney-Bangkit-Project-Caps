<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YourNey" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextInputOutlineCustom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:padding">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxCornerRadiusBottomEnd">6dp</item>
        <item name="boxCornerRadiusBottomStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="TextInputOutlineCustomRadius" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:padding">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="ButtonCustomTransparent">
        <item name="cornerRadius">6dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">6dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">8dp</item>
        <item name="strokeColor">@color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:drawablePadding">6dp</item>
    </style>

    <style name="Theme.YourNey.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>